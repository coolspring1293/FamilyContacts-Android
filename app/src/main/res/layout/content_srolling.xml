<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ModelExampleActivity"
    tools:showIn="@layout/details_scrolling">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:text="Son"
        android:textColor="@color/colorDetailText"
        android:id="@+id/relations"
        android:textSize="60px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="16px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="46dp"

        android:text="18819461662          GuangZhou"
        android:textColor="@color/colorDetailText"
        android:id="@+id/tel_loc_info"
        android:textSize="60px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_record"
        android:text="Recent record"
        android:textSize="40px"
        android:textColor="#886600"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="100dp"
        android:layout_above="@+id/fab_call"
        android:layout_alignParentStart="true" />

    <View
        android:layout_marginTop="76dp"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#999"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_marginTop="98dp"
        android:layout_marginRight="100dp"
        android:layout_alignBottom="@+id/tel_loc_info"
        android:layout_alignParentStart="true" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:backgroundTint="@color/colorCall"
        android:src="@drawable/ic_call_24dp"
        android:layout_marginTop="29dp"
        android:layout_alignTop="@+id/listView"
        android:layout_alignEnd="@+id/tel_loc_info"
        android:layout_marginEnd="20dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:backgroundTint="@color/colorMessage"
        android:src="@drawable/ic_email_24dp"

        android:layout_marginTop="30dp"
        android:layout_below="@+id/fab_call"
        android:layout_alignStart="@+id/fab_call" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_fave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:backgroundTint="@color/colorFavorite"
        android:src="@drawable/ic_favorite_24dp1"

        android:layout_below="@+id/fab_message"
        android:layout_alignStart="@+id/fab_message"
        android:layout_marginTop="30dp" />




</RelativeLayout>
