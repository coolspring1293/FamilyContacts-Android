<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ModelExampleActivity"
    tools:showIn="@layout/details_scrolling">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:text="Son"
        android:textColor="@color/colorDetailText"
        android:id="@+id/relations"
        android:textSize="60px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="16px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="46dp"

        android:text="No found Tel number"
        android:textColor="@color/colorDetailText"
        android:id="@+id/tel_loc_info"
        android:textSize="60px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_record"
        android:text="Recent record"
        android:textSize="40px"
        android:textColor="#886600"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_alignParentStart="true" />

    <View
        android:layout_marginTop="76dp"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#999"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_marginTop="120dp" />







</RelativeLayout>
