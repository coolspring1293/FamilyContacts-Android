<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:id="@+id/current_task_title"
        android:layout_height="@dimen/header_height"
        android:background="@color/colorPrimary"
        android:layout_width="fill_parent">


        <TextView
            android:id="@+id/fragment_home_text"
            android:layout_width="wrap_content"
            android:paddingTop="6sp"
            android:paddingBottom="6sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tab_dialing"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textScaleX="1.1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/row"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp">
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="6"
        android:id="@+id/text_show"
        android:background="#ffffff"
        android:textAlignment="center"
        android:textSize="25dp" />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_keyboard_backspace_24dp"
        android:text="@string/nothing"
        android:id="@+id/back"/>
    </LinearLayout>
   <LinearLayout
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:id="@+id/number_row1"
       android:orientation="horizontal"
       android:gravity="center"
       android:layout_above="@+id/number_row2"
       android:layout_alignParentStart="true">

       <android.support.design.widget.FloatingActionButton
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="16dp"
           android:id="@+id/tab_1"
           />
       <android.support.design.widget.FloatingActionButton
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="16dp"
           android:id="@+id/tab_2"

           />
       <android.support.design.widget.FloatingActionButton
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="16dp"
           android:id="@+id/tab_3"
           />


   </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/number_row2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_above="@+id/number_row3"
        android:layout_alignParentStart="true">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:id="@+id/tab_4"
            />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:id="@+id/tab_5"

            />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:id="@+id/tab_6"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/number_row3"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_above="@+id/number_row4"
        android:layout_alignParentStart="true">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:id="@+id/tab_7"
            />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:id="@+id/tab_8"

            />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:id="@+id/tab_9"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/number_row4"
        android:gravity="center"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentStart="true">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:id="@+id/tab_star"
            />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:id="@+id/tab_0"

            />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:id="@+id/tab_jing"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:id="@+id/tab_call"
            />

    </LinearLayout>
</RelativeLayout>
</LinearLayout>