<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.admin.myapplication.MainActivity">

    <fragment
        android:id="@+id/fragment_contacts"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        class = "com.example.admin.myapplication.ContactsActivity"/>

    <fragment
        android:id="@+id/fragment_records"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        class = "com.example.admin.myapplication.RecordsActivity"/>

    <fragment
        android:id="@+id/fragment_dialing"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        class = "com.example.admin.myapplication.DialingActivity"/>

    <com.example.admin.myapplication.FragmentIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFCEE"/>
</LinearLayout>
